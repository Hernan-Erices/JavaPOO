package listaSimpleEnlazada;

public class SinglyLinkedList {
	
	public int tam = 0;
    public Node head;

    public SinglyLinkedList() {

        // su codigo aqui

    }
    
    
    //ELIMINAR
	public void remove() {
		
		Node remove = head;
		
        for (int i = 0; i < tam-2; i++) {
            remove = remove.getNext();
        }
        Node next = remove.getNext();
        remove.setNext(next.getNext());
        tam--;
	}
	
	//IMPRIMIR
	public void printValues() {
		//SU CODIGO AQUI
		
        System.out.print("\n\n");
    	Node aux = head;
        while(aux != null){
        	System.out.print(ux.getValue() + ", ");
        	aux = aux.getNext();
        }
	}
   
    public void add(int value) {

        Node newNode = new Node(value);

        if(head == null) {
            head = newNode;
        } else {
            Node runner = head;
            while(runner.next != null) {
                runner = runner.next;
            }
            runner.next = newNode;
        }
    }  
}
